<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/tableimage">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stylish Modern Tables"
        android:textColor="#4F4F4F"
        android:textSize="17sp"
        android:layout_toRightOf="@id/tableimage"
        android:layout_marginTop="22dp"
        android:layout_marginStart="15dp"
        android:textStyle="normal"
        android:id="@+id/nametextview"/>

    <TextView
        android:id="@+id/desctextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aron Table Center"
        android:textColor="#4F4F4F"
        android:layout_toRightOf="@id/tableimage"
        android:layout_marginStart="15dp"
        android:layout_marginTop="49dp"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/pricetxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs.24,000"
        android:textSize="22dp"
        android:textStyle="normal"
        android:textColor="#FE4040"
        android:layout_toEndOf="@id/tableimage"
        android:layout_marginStart="15dp"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="22dp"/>

    <RatingBar
        android:id="@+id/ratingbar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tableimage"
        android:layout_marginTop="75dp"
        android:layout_marginStart="170dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#FFD700"
        android:progressBackgroundTint="#4F4F4F"
        android:stepSize="0.1" />


</RelativeLayout>