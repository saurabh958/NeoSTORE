<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#EDEDED"
        android:padding="2dp"
        android:src="@drawable/productimage1" />


    <TextView
        android:id="@+id/detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/detail_image"
        android:text="Pembroke"
        android:textColor="#1C1C1C"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detail_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/detail_image"
        android:text="(Table)"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/detail_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_category"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/detail_image"
        android:backgroundTint="#000"
        android:text="QTY : 3" />

    <TextView
        android:id="@+id/detail_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_category"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/detail_qty"
        android:text="â‚¹45.00"
        android:textColor="#333333"
        android:textSize="17sp" />

        <View
            android:id="@+id/verticalline1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDEDED"
            android:layout_marginTop="19dp"
            android:layout_below="@id/detail_cost"/>


</RelativeLayout>