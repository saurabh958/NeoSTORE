<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mycart_image"
            android:layout_width="76dp"
            android:layout_height="83dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="#EDEDED"
            android:padding="2dp"
            android:src="@drawable/productimage1" />


        <TextView
            android:id="@+id/mycart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/mycart_image"
            android:text="Pembroke"
            android:textColor="#1C1C1C"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mycart_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mycart_name"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/mycart_image"
            android:text="(Table)"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/mycart_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mycart_category"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#000"
            android:layout_toRightOf="@id/mycart_image"
             />

        <TextView
            android:id="@+id/mycart_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mycart_category"
            android:layout_toRightOf="@id/mycart_spinner"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="110dp"
            android:text="â‚¹45.00"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            android:textSize="17sp" />


        <ImageButton
            android:id="@+id/mycart_delete"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_below="@id/mycart_name"
            android:layout_toRightOf="@id/mycart_category"
            android:backgroundTint="@color/red"
            android:layout_centerVertical="true"
            android:src="@drawable/delete"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="10dp"/>


    </RelativeLayout>
</HorizontalScrollView>